@using Microsoft.AspNetCore.Components.Authorization
@using PetAdoptionManagement.Components.Account.Shared
@using PetAdoptionManagement.Components.Layout

<Router AppAssembly="@typeof(Program).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(PetAdoptionManagement.Components.Layout.MainLayout)">
            <NotAuthorized>
                <p>You are not authorized to view this page.</p>
            </NotAuthorized>
        </AuthorizeRouteView>
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
    <NotFound>
        <LayoutView Layout="typeof(PetAdoptionManagement.Components.Layout.MainLayout)">
            <h1>Page Not Found</h1>
            <p>Sorry, we couldn't find the page you were looking for.</p>
        </LayoutView>
    </NotFound>
</Router>

