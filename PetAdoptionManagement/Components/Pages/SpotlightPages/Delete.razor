@page "/spotlights/delete"
@using Microsoft.EntityFrameworkCore
@using PetAdoptionManagement.Components.Domain
@inject IDbContextFactory<PetAdoptionManagement.Data.PetAdoptionManagementContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete Spotlight</PageTitle>

<div class="container mt-5" style="font-family: 'Poppins', sans-serif; background: #fff8e1; padding: 2rem; border-radius: 15px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);">
    <!-- Back to Spotlights List Button -->
    <a class="btn btn-outline-primary mb-4" href="/spotlights" style="border-radius: 25px;">Back to List</a>

    <!-- Page Title -->
    <h1 class="mb-3" style="color: #D1913C;">Delete Spotlight</h1>
    <p class="text-muted">Are you sure you want to delete this spotlight?</p>

    @if (spotlight is null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <!-- Spotlight Details -->
        <div class="mb-4">
            <h2>Spotlight Details</h2>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Start Date</dt>
                <dd class="col-sm-9">@spotlight.StartDate.ToString("yyyy-MM-dd")</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-3">Reason</dt>
                <dd class="col-sm-9">@spotlight.Reason</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@spotlight.Status</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-3">Pet ID</dt>
                <dd class="col-sm-9">@spotlight.PetId</dd>
            </dl>
        </div>

        <!-- Delete Confirmation -->
        <EditForm method="post" Model="spotlight" OnValidSubmit="DeleteSpotlight" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger w-100" style="border-radius: 25px;" disabled="@(spotlight is null)">Delete</button>
        </EditForm>
    }
</div>

@code {
    private Spotlight? spotlight;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        spotlight = await context.Spotlight.FirstOrDefaultAsync(m => m.Id == Id);

        if (spotlight is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteSpotlight()
    {
        using var context = DbFactory.CreateDbContext();
        context.Spotlight.Remove(spotlight!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/spotlights");
    }
}
